.responsive-image {
    position: relative;
    overflow: hidden;

    &--16\/9 {
        padding-top: 56.25%;
    }

    &--4\/3 {
        padding-top: 75%;
    }

    &--1\/1 {
        padding-top: 100%;
    }

    &--3\/2 {
        padding-top: 66.6667%;
    }

    img,
    .responsive-image__content {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        max-width: 100%;
        width: 100%;
        max-height: 100%;
    }
}
