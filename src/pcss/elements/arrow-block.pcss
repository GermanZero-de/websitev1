.arrow-block {
    position: relative;

    &__icon {
        position: absolute;
        right: 100%;
        bottom: 100%;
        margin: 0 -1px -2px 0;
        fill: currentColor;
        width: 15px;
        height: 15px;

        @screen md {
            width: 24px;
            height: 24px;
        }

        @screen lg {
            margin: 0 -1px -10px 0;
            width: 30px;
            height: 30px;
        }
    }
}
