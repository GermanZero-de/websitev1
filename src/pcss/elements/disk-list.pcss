.disk-list li {
    padding-left: 1em;
    margin: 10px 0;
    position: relative;
}

.disk-list li::before {
    content: "";
    position: absolute;
    left: 0;
    top: .7em;
    -webkit-transform: translate(0, -50%);
    transform: translate(0, -50%);
    width: .375em;
    height: .375em;
    border-radius: 50%;
    background: #ffc11e;
}
