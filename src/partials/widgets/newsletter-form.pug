.newsletter-form(class=(newsletter_class || '')).flex-1.flex.flex-col
    .card.card--form.bg-white.flex-1.flex.flex-col
        if newsletter_full_width
            div(class="card__info block sm:hidden lg:block") #newsletter
            .flex
                div(class="newsletter-form__title lg:w-full sm:mb-1") Bleib informiert!
                div(class="hidden sm:block lg:hidden pl-4")
                    div(class="card__info") #newsletter
                    div(class="newsletter-form__text mb-4") Updates & Hinweise auf Aktionen
            div(class="newsletter-form__text mb-4 block sm:hidden lg:block") Updates & Hinweise auf Aktionen
            form(class="form flex-1 flex flex-col sm:flex-row lg:flex-col mb-2 lg:mb-0 -mx-2 sm:-mx-1 lg:-mx-2 items-stretch")
                div(class="form__control px-2 sm:px-1 lg:px-2 flex flex-col mb-2 sm:mb-0 lg:mb-2 newsletter-form__col newsletter-form__col--big")
                    label.relative.block
                        input(class="form__input" type="email" value="" required onkeyup="this.setAttribute('value', this.value);" )
                        span.form__control-placeholder E-Mail Adresse
                div(class="form__control px-2 sm:px-1 lg:px-2 flex flex-col mb-2 sm:mb-0 lg:mb-2 newsletter-form__col")
                    label.relative.block
                        input(class="form__input" type="text" value="" required onkeyup="this.setAttribute('value', this.value);" )
                        span.form__control-placeholder PLZ
                div(class="px-2 sm:px-1 lg:px-2 flex-1 sm:hidden lg:block")
                    div(class=(newsletter_link_class || ""))
                        a.link.newsletter-form__text.underline(href="/klimaplan/datenschutz") Infos & Hinweise zum Datenschutz
                div(class="px-2 sm:px-1 lg:px-2")
                    button.button.button--primary.w-full(style="min-width:220px")
                        span Jetzt anmelden!
            div.text-center(class=("hidden sm:block lg:hidden " + (newsletter_link_class || "")))
                a.link.newsletter-form__text.underline(href="/klimaplan/datenschutz") Infos & Hinweise zum Datenschutz
        else
            div(class="card__info block") #newsletter
            div(class="newsletter-form__title lg:w-full md:mb-1") Bleib informiert!
            div(class="newsletter-form__text mb-4") Updates & Hinweise auf Aktionen
            form.flex-1.flex.flex-col
                div.mb-2
                    .form-control
                        label.relative.block
                            input(class="form__input" type="email" value="" required onkeyup="this.setAttribute('value', this.value);" )
                            span.form__control-placeholder E-Mail Adresse
                div.mb-2
                    .form-control
                        label.relative.block
                            input(class="form__input" type="text" value="" required onkeyup="this.setAttribute('value', this.value);" )
                            span.form__control-placeholder PLZ
                div.flex-1
                div(class=(newsletter_link_class || ""))
                    a.link.newsletter-form__text.underline(href="/klimaplan/datenschutz") Infos & Hinweise zum Datenschutz
                div
                    button.button.button--primary.w-full
                        span Jetzt anmelden!


