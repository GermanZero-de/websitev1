    ul.menu-screen__list.js-menu-screen__list
        each routeItem in routes
            if routeItem.visible !== false
                li(class=`menu-screen__list-item js-menu-list-item ${routeItem.children && routeItem.children.length ? 'menu-screen__list-item--sublist' : ''}`)
                    a(href=routeItem.href class=`hover:text-primary transition-color ${routeItem.classes || ''}` target=routeItem.target)= routeItem.title
