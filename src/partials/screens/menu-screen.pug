div.menu-screen.js-menu-screen(data-menu-screen-params='{"activeSubList":1}')
    span(class="menu-btn-close js-menu-btn-close cursor-pointer transition-color hover:text-primary")
        include ../../assets/img/svg-sprite/close.svg
