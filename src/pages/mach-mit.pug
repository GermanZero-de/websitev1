extends ../partials/layouts/main.pug

block content
    include ../partials/screens/menu-screen
    append variables
        - locals.header_bg = 'background-image: url(/assets/img/machmit-first-screen.jpg);'
        - locals.quoteTitle = '“GermanZero ist toll und wird jeden Tag toller. Stark, wer alles mit dabei ist.“'
        - locals.quoteText = 'Heinrich Strößenreuther, Chef-Aktivist'
    include ../partials/screens/quote-screen
    div(class="container pt-6 md:pt-9")
        div(class="flex -mx-2 -lg:mx-3 justify-center")
            div(class="px-2 lg:px-3 w-10/12 md:w-8/12")
                .content.content--size-3.text-black.mb-4 Werde Teil von etwas Neuem.
                .title.title--size-h2.text-black.mb-2 Mach mit bei GermanZero
                div(class="content content--size-2 text-black mb-6 sm:mb-7 lg:mb-10 xl:mb-12 text-block")
                    p Donec sed odio dui. Cras justo odio, dapibus ac facilisis in, egestas eget quam. Curabitur blandit tempus porttitor. Maecenas sed diam eget risus varius blandit sit amet non magna. Etiam porta sem malesuada magna mollis euismod.
                    p Aenean eu leo quam. Pellentesque ornare sem lacinia quam venenatis vestibulum. Duis mollis, est non commodo luctus, nisi erat porttitor ligula, eget lacinia odio sem nec elit. Maecenas faucibus mollis interdum. Aenean lacinia bibendum nulla sed consectetur. Vestibulum id ligula porta felis euismod semper. Donec sed odio dui. Etiam porta sem malesuada magna mollis euismod. Maecenas faucibus mollis interdum. Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus. Vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor.

    div(class="pt-6 md:pt-8 story-block-container")
        .story-block-container__bg(style="background-image: url('/assets/img/arrows-sprite.png'), linear-gradient(180deg, rgba(244,211,0,1) 0%, rgba(244,211,0,1) 100%)")
        .container
            div(class="-mx-2 lg:-mx-3 flex flex-wrap justify-center mb-8 lg:mb-7")
                div.story-block__form-image
                    img(src="/assets/img/mach-mit-image.png")
                div(class="px-2 lg:px-3 md:w-1/12 lg:w-2/12 hidden md:block")
                div(class="px-2 lg:px-3 w-full md:w-10/12 lg:w-6/12")
                    .title.title--size-h3.mb-5 Mitglied werden bei GermanZero e.V.
                    form.form.js-form.flex.flex-wrap.-mx-2
                        div(class="px-2 w-full sm:w-6/12 mb-4")
                            div(class="form-control")
                                label.relative.block
                                    select(class="form__select w-full js-form-control" name="")
                                    span.form__control-placeholder Anrede
                                    span.form__error-message

                        div(class="px-2 w-full sm:w-6/12 mb-4")
                            div(class="form-control")
                                label.relative.block
                                    select(class="form__select w-full js-form-control" name="")
                                    span.form__control-placeholder Titel
                                    span.form__error-message

                        div(class="px-2 w-full sm:w-6/12 mb-4")
                            div(class="form-control")
                                label.relative.block
                                    input(class="form__input js-form-control" name="vorname" type="text" data-validation-rule='["required"]' value="" onkeyup="this.setAttribute('value', this.value);" )
                                    span.form__control-placeholder Vorname *
                                    span.form__error-message
                        div(class="px-2 w-full sm:w-6/12 mb-4")
                            div(class="form-control")
                                label.relative.block
                                    input(class="form__input js-form-control" name="name" type="text" data-validation-rule='["required"]' value="" onkeyup="this.setAttribute('value', this.value);" )
                                    span.form__control-placeholder Name *
                                    span.form__error-message
                        div(class="px-2 w-full sm:w-9/12 mb-4")
                            div(class="form-control")
                                label.relative.block
                                    input(class="form__input js-form-control" name="" type="text" data-validation-rule='["required"]' value="" onkeyup="this.setAttribute('value', this.value);" )
                                    span.form__control-placeholder Straße *
                                    span.form__error-message
                        div(class="px-2 w-full sm:w-3/12 mb-4")
                            div(class="form-control")
                                label.relative.block
                                    input(class="form__input js-form-control" name="" type="text" data-validation-rule='["required"]' value="" onkeyup="this.setAttribute('value', this.value);" )
                                    span.form__control-placeholder Hausnumer *
                                    span.form__error-message
                        div(class="px-2 w-full sm:w-3/12 mb-4 sm:mb-6")
                            div(class="form-control")
                                label.relative.block
                                    input(class="form__input js-form-control" name="" type="text" data-validation-rule='["PLZ", "required"]' value="" onkeyup="this.setAttribute('value', this.value);" )
                                    span.form__control-placeholder PLZ *
                                    span.form__error-message
                        div(class="px-2 w-full sm:w-9/12 mb-4 sm:mb-6")
                            div(class="form-control")
                                label.relative.block
                                    input(class="form__input js-form-control" name="" type="text" data-validation-rule='["required"]' value="" onkeyup="this.setAttribute('value', this.value);" )
                                    span.form__control-placeholder Stadt *
                                    span.form__error-message
                        div(class="px-2 w-full mb-4")
                            div(class="form-control")
                                label.relative.block
                                    input(class="form__input js-form-control" name="email" type="email" data-validation-rule='["email", "required"]' value="" onkeyup="this.setAttribute('value', this.value);" )
                                    span.form__control-placeholder E-Mail Adresse *
                                    span.form__error-message
                        div(class="px-2 w-full mb-4 sm:mb-6")
                            div(class="form-control")
                                label.relative.block
                                    input(class="form__input js-form-control" name="phone" type="text" value="" onkeyup="this.setAttribute('value', this.value);" )
                                    span.form__control-placeholder Mobilfunknummer
                                    span.form__error-message
                        div(class="px-2 w-full mb-4 sm:mb-5")
                            div(class="form-control")
                                label.relative.block
                                    input(class="form__input js-form-control" name="" type="text" value="" onkeyup="this.setAttribute('value', this.value);" )
                                    span.form__control-placeholder Wie viel Zeit hast Du für uns pro Woche?
                                    span.form__error-message
                        div(class="px-2 w-full mb-4 sm:mb-5")
                            div(class="form-control")
                                label.relative.block
                                    input(class="form__input js-form-control" name="" type="text" value="" onkeyup="this.setAttribute('value', this.value);" )
                                    span.form__control-placeholder Wie kannst Du uns am besten unterstützen?
                                    span.form__error-message
                        div(class="px-2 w-full mb-4")
                            div(class="form-control")
                                label.relative.form__checkbox
                                    input(class="js-form-control" name="" type="checkbox")
                                    span.form__checkbox-placeholder Ja, ich möchte den GermanZero-Newsletter bekommen.
                                    span.form__error-message
                        div(class="px-2 w-full mb-4 sm:mb-6")
                            div(class="form-control")
                                label.relative.form__checkbox
                                    input(class="js-form-control" name="" type="checkbox")
                                    span.form__checkbox-placeholder
                                        | Ja, ich habe die
                                        span Datenschutzbestimmungen
                                        | gelesen.
                                    span.form__error-message
                        div(class="px-2 w-full mb-4")
                            button.button.button--primary.js-form-submit(type="button")
                                span Jetzt Mitglied werden!
                div(class="px-2 lg:px-3 md:w-1/12 lg:w-4/12 hidden md:block")
    include ../partials/screens/events-screen
    include ../partials/screens/footer
