extends ../partials/layouts/main.pug

block content
    include ../partials/screens/menu-screen
    append variables
        - locals.header_bg = 'background-image: url(/assets/img/machmit-first-screen.jpg);'
        - locals.quoteTitle = '"Wir von GermanZero helfen mit Klimaplan, 1,5-Grad-Gesetz und Mobilisierung der Politik bei dieser Menschheitsentscheidung."'
        - locals.quoteText = 'Heinrich Strößenreuther, Vorstand GermanZero'
    include ../partials/screens/quote-screen
    div(class="container pt-6 md:pt-9")
        div(class="flex -mx-2 -lg:mx-3 justify-center")
            div(class="px-2 lg:px-3 w-10/12 md:w-8/12")
                .content.content--size-3.text-black.mb-4 #profilbild
                .title.title--size-h2.text-black.mb-2 Zeigen Sie Flagge für GermanZero!
                div(class="content content--size-2 text-black mb-6 sm:mb-7 lg:mb-10 xl:mb-12 text-block")
                    p Zeigen Sie in sozialen Netzwerken mit Ihrem GermanZero Profilbild, dass Ihnen die Arbeit von GermanZero wichtig ist.

    div(class="pt-6 md:pt-8 story-block-container")
        .story-block-container__bg.bg-secondary
        .container
            div(class="-mx-2 lg:-mx-3 flex flex-wrap justify-center mb-8 lg:mb-7")
                div(class="px-2 lg:px-3 lg:w-1/12 xl:w-2/12 hidden md:block")
                div(class="px-2 lg:px-3 w-full md:w-10/12 xl:w-8/12")
                    .title.title--size-h3.mb-5.text-center Jetzt personalisiertes Profilbild erstellen!
                    include ../partials/screens/profile-generator
                div(class="px-2 lg:px-3 lg:w-1/12 xl:w-2/12 hidden md:block")
    include ../partials/screens/events-screen
    include ../partials/screens/footer
