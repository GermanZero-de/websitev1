extends ../../partials/layouts/main.pug

block content
    include ../../partials/screens/menu-screen
    append variables
        - locals.header_bg = 'url(/assets/img/machmit-first-screen.jpg)'
        - locals.quoteTitle = '"Wir von GermanZero helfen mit Klimaplan, 1,5-Grad-Gesetz und Mobilisierung der Politik bei dieser Menschheitsentscheidung."'
        - locals.quoteText = 'Heinrich Strößenreuther, Vorstand GermanZero'
        - locals.breadcrumbs = [{title: 'Zurück zum Klimaplan', href: '/klimaplan'},{title: 'Internationaler Ausgleich'}]
        - prevLink = {title: 'Individueller Klimaplan', href: '/klimaplan/konsum'};
        - nextLink = {title: 'Energie', href: '/klimaplan/energie'};
    include ../../partials/screens/quote-screen
    div(class="container")
        div(class="flex -mx-2 -lg:mx-3 justify-center")
            div(class="px-2 lg:px-3 w-10/12 md:w-8/12")
                div(class="mt-3 md:mt-6")
                    include ../../partials/shared/breadcrumbs
                .title.title--size-h2.text-black.mb-2 Der Stein des Anstoßes sein: Wenn wir vorauslaufen, werden andere folgen
                div(class="content content--size-2 text-black mb-6 sm:mb-7 lg:mb-10 xl:mb-10 text-block")
                    p Wenn es uns gelingt, nicht nur Deutschland klimapositiv zu machen, sondern dabei ein leuchtendes Beispiel für Europa und schließlich den Rest der Welt zu sein, können wir die Lawine der Veränderung ins Rollen bringen, die es braucht, um weltweit das 1,5-Grad-Limit einzuhalten. Unsere Fortschritte in Deutschland wollen wir daher so anlegen, dass sie möglichst viel Hebelwirkung für die internationale Debatte haben und so auch anderswo der Technologie-und Emissionsentwicklung einen entscheidenden Anstoß geben können.

    div(class="pt-6 md:pt-8 story-block-container")
        .story-block-container__bg.js-lazy-image(data-bg="url('/assets/img/arrows-sprite.png'), linear-gradient(180deg, rgba(244,211,0,1) 0%, rgba(244,211,0,1) 100%)")
        .container
            div(class="-mx-2 lg:-mx-3 flex flex-wrap justify-center mb-8 lg:mb-7")
                div(class="px-2 lg:px-3 md:w-1/12 hidden md:block")
                div(class="px-2 lg:px-3 w-full md:w-10/12 text-block")
                    include ./internationaler_ausgleich.html
                    div(class="flex justify-end mt-3 md:mt-6")
                        div(class="w-6/12 text-left pr-2")
                            if prevLink
                                a(href=`${prevLink.href}` class="transition-color hover:text-primary")= '← ' + prevLink.title
                        div(class="w-6/12 text-right pl-2")
                            if nextLink
                                a(href=`${nextLink.href}` class="transition-color hover:text-primary")= nextLink.title + ' →'
                    div(class="mt-6 md:mt-9")
                        include ../../partials/shared/breadcrumbs
                div(class="px-2 lg:px-3 md:w-1/12 hidden md:block")
    include ../../partials/screens/events-screen
    include ../../partials/screens/footer
